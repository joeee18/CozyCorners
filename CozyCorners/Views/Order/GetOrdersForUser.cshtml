@model IEnumerable<CozyCorners.Core.Models.Order.Order>

@{
    ViewData["Title"] = "GetOrdersForUser";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<section class="h-100 h-custom p-5 mt-5 mb-5 custom-margin">
    <div class="container p-4 mb-5" style="padding:30px 15px 30px 15px;border-radius: 10px; border: 1px solid #dee2e6; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); background-color:#FFFFFF;">
        <div class="row">
            <!-- Cart Items Section (Left) -->
            <div class="col-lg-12">
                
                @foreach (var item in Model)
                {
                <div class=" shadow-sm mb-5" >
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h2 class="fw-bold">Order</h2>
                            
                        </div>
                        <hr class="my-3">
                            <div class=" shadow-sm mb-4" >
                                <div class="row g-0">
                                    <!-- Image on the left -->
                                    <div class="col-md-4">
                                      <div style="padding:20px;">  <h2>@item.Status</h2>
                                       <h4>@item.OrderDate</h4>
                                       <label for="email2">Shipping Address</label>
                                        <p>@item.AddressShipping.City,@item.AddressShipping.Country,@item.AddressShipping.Street</p></div>
                                    </div>
                                    <hr />
                                    <p>Items</p>
                                    @foreach (var orderitem in item.Items)
                                    {
                                        <div class="col-md-12">
                                           <div style="padding:20px;"> <div class="card shadow-sm mb-4" style="border-radius: 10px;">
                                                <div class="row g-0">
                                                    <!-- Image on the left -->
                                                    <div class="col-md-4">
                                                        <img src="@orderitem.Product.PhotoUrl" class="img-fluid rounded-start" style=" height:150px;width:150px; object-fit: cover;" alt="@orderitem.Product.ProductName" />
                                                    </div>

                                                    <!-- Details on the right -->
                                                    <div class="col-md-8">
                                                        <div class="card-body">
                                                            <h5 class="card-title">@orderitem.Product.ProductName</h5>
                                                            <p class="card-text">Quantity: @orderitem.Quantity</p>
                                                            <p class="card-text fw-bold text-success">$ @orderitem.PriceAtPurchase.ToString("F2")</p>
                                                            @* You can add more content or buttons here if needed *@
                                                        </div>
                                                    </div>
                                                </div>
                                            </div></div>
                                        </div>

                                    }

                                </div>
                            </div>
                       
                    </div>
                </div>
                <hr />
                <hr />
                }

              
            </div>
            </div>
            </div>
            </section>

